<div class="form-radio radio">
    {% ctx.values.forEach(function(item) { %}
    <div class="{{ ctx.instance.checkboxClasses }}"{% if (!ctx.component.inline) { %} style="margin-left: 0.5em;"{% } %}>
        <{{ctx.input.type}}
          ref="input"
          {% for (var attr in ctx.input.attr) { %}
          {{attr}}="{{ctx.input.attr[attr]}}"
          {% } %}
          value="{{item.value}}"
          {% if (ctx.value && (ctx.value === item.value || (typeof ctx.value === 'object' && ctx.value.hasOwnProperty(item.value) && ctx.value[item.value]))) { %}
            checked=true
          {% } %}
          {% if (item.disabled) { %}
            disabled=true
          {% } %}
          id="{{ctx.id}}{{ctx.row}}-{{item.value}}"
        >
        <div class="{{ ctx.instance.stateClasses }}">
            {% if (ctx.instance.isIcon) { %}
                <i class="{{ ctx.instance.iconClasses }}"></i>
            {% } %}
            <label class="control-label form-check-label">{{ctx.t(item.label, { _userInput: true })}}</label>
        </div>
    </div>
    {% if (!ctx.component.inline) { %}<div style="clear:both; margin-bottom: 0.5em;"></div>{% } %}
    {% }) %}
  </div>
